
{% extends "site/layouts/master.njk" %}

{% set htitle = "Icclesia | Rede social para católicos" %}
{% set meta_title = "Icclesia | Rede social para católicos" %}
{% set meta_description = "Icclesia é a rede social para católicos" %}

{% block content %}

<div class="container mt-5">
    <h1>Login Teste</h1>

    {% if(msgs.length) %}
        <div class="alert alert-warning">
            {{ msgs[0] }}
        </div>
     {% endif %}
    
    <form action="/auth/login" method="post">
        <div class="form-group">
            <label>E-mail</label>
            <input type="text" class="form-control" name="email" required>
        </div>
        <div class="form-group">
            <label>Senha</label>
            <input type="password" class="form-control" name="password" required>
        </div>
        <button type="submit" class="btn-default b-none">Entrar</button>
    </form>
</div>

{% endblock %}